@model UI_Reiseboerse_Graf.Models.BuchungHinzufuegenModel

@{
    ViewBag.Title = "Hinzufuegen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="logoschrift">Buchen - 1.Schritt</h2>

@using (Html.BeginForm("Buchen", "Buchungen"))
{
    for (int i = 0; i < Model.AnzahlModel.Anzahl_Erwachsene; i++)
    {
        <div class="row reise">
            <h4>Daten des @(i + 1)<text>.</text> Erwachsenen</h4>
            <div class="col-xs-6 col-xs-offset-3">

                <div class="form-group">
                    @Html.LabelFor(modelItem => Model.Buchungen[i].Vorname)
                    @Html.TextBoxFor(modelItem => Model.Buchungen[i].Vorname)
                </div>
                <div class="form-group">
                    @Html.LabelFor(modelItem => Model.Buchungen[i].Nachname)
                    @Html.TextBoxFor(modelItem => Model.Buchungen[i].Nachname)
                </div>
                <div class="form-group">
                    @Html.LabelFor(modelItem => Model.Buchungen[i].ReisePassNummer)
                    @Html.TextBoxFor(modelItem => Model.Buchungen[i].ReisePassNummer)
                </div>
                <div class="form-group">
                    @Html.LabelFor(modelItem => Model.Buchungen[i].Geburtsdatum)
                    @Html.TextBoxFor(modelItem => Model.Buchungen[i].Geburtsdatum)
                </div>
                <div class="logoschrift">
                    @Html.DisplayNameFor(modelItem => Model.AnzahlModel.Preis_Erwachsene)
                    @Html.DisplayFor(modelItem => Model.AnzahlModel.Preis_Erwachsene)
                </div>
            </div>
        </div>
    }

    for (int i = 0; i < Model.AnzahlModel.Anzahl_Kinder; i++)
    {
        <div class="row reise">
            <h4>Daten des @(i + 1)<text>.</text> Kindes</h4>
            <div class="col-xs-6 col-xs-offset-3">
                <div class="form-group">
                    @Html.LabelFor(modelItem => Model.Buchungen[i].Vorname)
                    @Html.TextBoxFor(modelItem => Model.Buchungen[i].Vorname)
                </div>
                <div class="form-group">
                    @Html.LabelFor(modelItem => Model.Buchungen[i].Nachname)
                    @Html.TextBoxFor(modelItem => Model.Buchungen[i].Nachname)
                </div>
                <div class="form-group">
                    @Html.LabelFor(modelItem => Model.Buchungen[i].ReisePassNummer)
                    @Html.TextBoxFor(modelItem => Model.Buchungen[i].ReisePassNummer)
                </div>
                <div class="form-group">
                    @Html.LabelFor(modelItem => Model.Buchungen[i].Geburtsdatum)
                    @Html.TextBoxFor(modelItem => Model.Buchungen[i].Geburtsdatum)
                </div>

                <div class="logoschrift">
                    @Html.DisplayNameFor(modelItem => Model.AnzahlModel.Preis_Kind)
                    @Html.DisplayFor(modelItem => Model.AnzahlModel.Preis_Kind)
                </div>
            </div>
        </div>
    }
    <div>
        €@((Model.AnzahlModel.Preis_Erwachsene*Model.AnzahlModel.Anzahl_Erwachsene)+(Model.AnzahlModel.Anzahl_Kinder*Model.AnzahlModel.Preis_Kind))
    </div>
    <input type="submit" value="Weiter zum nächsten Schritt" class="btn anmeldung"/>
}

