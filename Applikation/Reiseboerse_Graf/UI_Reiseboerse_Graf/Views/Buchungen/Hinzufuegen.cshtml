@model List<UI_Reiseboerse_Graf.Models.BuchungenModel>

@{
    ViewBag.Title = "Hinzufuegen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="logoschrift">Buchen - 1.Schritt</h2>

@for (int i = 0; i < Model.Count; i++)
{
    <div class="row reise">
        <h4>Daten des @(i+1)<text>.</text> Reisenden</h4>
        <div class="col-xs-6 col-xs-offset-3">
            <div class="form-group">
                @Html.LabelFor(modelItem => Model[i].Vorname)
                @Html.TextBoxFor(modelItem => Model[i].Vorname)
            </div>
            <div class="form-group">
                @Html.LabelFor(modelItem => Model[i].Nachname)
                @Html.TextBoxFor(modelItem => Model[i].Nachname)
            </div>
        </div>
        @Html.LabelFor(modelItem => Model[i].ReisePassNummer)
        @Html.TextBoxFor(modelItem => Model[i].ReisePassNummer)
        @Html.LabelFor(modelItem => Model[i].Geburtsdatum)
        @Html.TextBoxFor(modelItem => Model[i].Geburtsdatum)
    </div>
}
