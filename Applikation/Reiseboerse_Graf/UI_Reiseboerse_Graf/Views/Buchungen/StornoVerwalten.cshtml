@model IEnumerable<UI_Reiseboerse_Graf.Models.StornoModel>

@{
    ViewBag.Title = "StornoVerwalten";
    Layout = "~/Views/Shared/_LayoutVerwaltung.cshtml";
}

<h2>StornoVerwalten</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Passnummer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Geburtsdatum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GebuchtAm)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Preis)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Passnummer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Geburtsdatum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GebuchtAm)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Preis)
        </td>
        <td>
            @Html.ActionLink("Rückgängig machen", "StornoEntfernen", new { id=item.Id },new { @class="btn btn-success"}) 
        </td>
    </tr>
}

</table>
<p>@Html.ActionLink("Startseite", "Verwaltung", "Home", null, new { @class = "btn btn-info" })</p>