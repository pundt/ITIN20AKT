@model IEnumerable<UI_Reiseboerse_Graf.Models.BuchungenModel>

@{
    ViewBag.Title = "ZeigeDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="Schriftartblau">Alle Buchungsdetails</h2>
<div class="container">
    <div class="col-xs-8 col-xs-offset-2 reise">
        <table class="table table-responsive">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Vorname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nachname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReisePassNummer)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vorname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nachname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReisePassNummer)
                    </td>
                    <td>
                        @Html.ActionLink("Stornieren", "Stornieren", "Buchungen", new { id = item.ID }, new { @class = "btn anmeldung" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>