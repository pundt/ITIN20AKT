<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meine ASP.NET-Anwendung</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-xs-4">
                <img src="~/Content/bilder/reisebüro_logo.jpg" class="img-responsive" />
            </div>
            <div class="col-xs-3 logoschrift">
                Wir sind seit 1979 Ihr Ansprechpartner für preisgünstige und qualitative Pauschalreisen
                <div class="row login">
                    @Html.ActionLink("Anmelden", "Login", "Benutzer", null, new { @class = "btn anmeldung" })
                </div>
            </div>
            <div class="col-xs-5">
            <div class="slider">
                <div class="crop">
                    <span class="img" style="background-image:url('../../Content/bilder/slidertestimg/1_hotel_test.jpg');"></span>
                </div>
                <div class="crop">
                    <span class="img" style="background-image: url('../../Content/bilder/slidertestimg/1_reise_test.jpg');"></span>
                </div>
                <div class="crop">
                    <span class="img" style="background-image: url('../../Content/bilder/slidertestimg/2_hotel_test.jpg');"></span>
                </div>
                </div>


              
            </div>
            <div class="col-xs-1" align="right">

            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer class="footer navbar navbar-fixed-bottom">
            <div class="container-fluid">
                <div class="col-xs-12">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="#">Home</a></li>
                        <li><a href="#">Impressum</a></li>
                        <li><a href="#">AGB</a></li>
                        <li><a href="#">Über uns</a></li>
                    </ul>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/slider")
    @Scripts.Render("~/bundles/bootstrap")
  
    <script>
        $('.slider').anyslider();
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
