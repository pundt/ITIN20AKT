<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reisebüro Graf - @ViewBag.Title</title>
    <link rel="shortcut icon" href="~/Content/bilder/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/Content/bilder/favicon.ico" type="image/x-icon">
    @Styles.Render("~/Content/toastr")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="row">
                <div class="col-xs-3">
                    <div class="kontakt">
                        <div class="col-xs-12 center-block">
                            <img src="~/Content/reisebuero_Graf.jpg" class="headerimg" />
                        </div>
                    </div>
                </div>


                <div class="col-xs-5 headerLayout">
                    "Wir sind seit 1979 Ihr Ansprechpartner für preisgünstige und qualitative Pauschalreisen"
                </div>
                <div class="col-xs-4">
                    <img src="~/Content/bilder/reisebüro_logo.jpg" class="img-responsive headerimg2" />
                </div>
            </div>

            <div class="row headerkleiner">
                <div class="col-xs-3">
                    <a href="tel:0699/11143907" class="btn buttonAction center-block">0800/206894</a>
                </div>
                <div class="col-xs-4 col-xs-push-1">
                    @Html.ActionLink("Zu unseren Reisen", "Laden", "Reisen", null, new { @class = "btn buttonAction center-block" })
                </div>
                <div class="col-xs-4 col-xs-push-1">


                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="center-block">
                            @Html.ActionLink("Abmelden", "Logout", "Benutzer", null, new { @class = "btn buttonAction" })
                            @Html.ActionLink("Ihr Profil", "Aktualisieren", "Benutzer", null, new { @class = "btn buttonAction" })
                        </div>
                    }
                    else
                    {
                        @Html.Partial("~/Views/Benutzer/_Login.cshtml", new UI_Reiseboerse_Graf.Models.LoginModel());
                    }
                </div>

            </div>
        </div>
        <div class="slide1">
            @RenderBody()
        </div>
        <footer class="headerkleiner navbar navbar-bottom">
            <div class="row">
                <div class="col-xs-8 col-xs-offset-4">
                    <ul class="nav navbar-nav">
                        <li class="active">@Html.ActionLink("Reiseauflistung", "Laden", "Reisen")</li>
                        <li><a href="#">Impressum</a></li>
                        <li><a href="#">AGB</a></li>
                    </ul>
                </div>
            </div>
        </footer>

    </div>


    @Scripts.Render("~/bundles/jquery")

    <script src="/Scripts/globalize/globalize.js" type="text/javascript"></script>
    <script src="~/Scripts/cldr.js" type="text/javascript"></script>
    <script src="~/Scripts/cldr/event.js" type="text/javascript"></script>
    <script src="~/Scripts/cldr/supplemental.js" type="text/javascript"></script>
    <script src="/scripts/globalize/cultures/globalize.culture.de-DE.js" type="text/javascript"></script>
    <script src="~/Scripts/toastr.js"></script>


    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/locales/bootstrap-datepicker.de.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#myBtn").click(function () {
                $("#myModal").modal();
            });

            toastr.options = {
                "closeButton": false,
                "debug": false,
                "newestOnTop": false,
                "progressBar": false,
                "positionClass": "toast-top-center",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            }

            @{
                if (TempData["success"]!=null)
                {
                    <text>toastr["success"]('@TempData["success"]');</text>
                } else if (TempData["error"]!=null)
                {
                    <text>toastr["error"]('@TempData["error"]');</text>
                }
            }

            Globalize.culture('de');
        });
    </script>



    @RenderSection("scripts", required: false)
</body>
</html>
