<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reisebüro Graf - @ViewBag.Title</title>
    <link rel="shortcut icon" href="~/Content/bilder/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/Content/bilder/favicon.ico" type="image/x-icon">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">



        <div class="row">
            <div class="col-xs-3">
                <div class="kontakt">
                    <div class="col-xs-12 center-block">

                        <img src="~/Content/reisebuero_Graf.jpg" class="headerimg" />
                    </div>
                </div>
            </div>


            <div class="col-xs-5 headerLayout">
                "Wir sind seit 1979 Ihr Ansprechpartner für preisgünstige und qualitative Pauschalreisen"
            </div>
            <div class="col-xs-4">
                <img src="~/Content/bilder/reisebüro_logo.jpg" class="img-responsive headerimg2" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 startlink">
                <div class="col-md-3">
                    <span class="glyphicon glyphicon-phone-alt"></span>
                    <a href="tel:0699/11143907">0800/206894</a>||
                </div>
                <div class="col-md-3">
                    @Html.ActionLink("Zu unseren Reisen", "Laden", "Reisen")||
                </div>
                <div class="col-md-6">


                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="Schriftartblau">
                            Herzlich Willkommen, @User.Identity.Name!
                        </div><br />
                        @Html.ActionLink("Abmelden", "Logout", "Benutzer", null, new { @class = "btn anmeldung" })
                        @Html.ActionLink("Ihr Profil", "Aktualisieren", "Benutzer", null, new { @class = "btn anmeldung" })
                    }
                    else
                    {
                        @Html.Partial("~/Views/Benutzer/_Login.cshtml", new UI_Reiseboerse_Graf.Models.LoginModel());
                    }
                </div>



            </div>


            @*<div class="col-xs-4 col-xs-offset-1">
                        <div class="row">
                            <div class="pull-right">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <div class="Schriftartblau">
                                        Herzlich Willkommen, @User.Identity.Name!
                                    </div><br />
                                    @Html.ActionLink("Abmelden", "Logout", "Benutzer", null, new { @class = "btn anmeldung" })
                                    @Html.ActionLink("Ihr Profil", "Aktualisieren", "Benutzer", null, new { @class = "btn anmeldung" })
                                }
                                else
                                {
                                    @Html.Partial("~/Views/Benutzer/_Login.cshtml", new UI_Reiseboerse_Graf.Models.LoginModel());
                                }
                            </div>
                        </div>

                    </div>
                </div>*@


        </div>
        <div class="slide1">
            @RenderBody()
            @*<hr />*@
            <footer class="footer navbar navbar-bottom">
                <div class="row">
                    <div class="container-fluid">
                        <div class="col-md-12">
                            <ul class="nav navbar-nav">
                                <li class="active">@Html.ActionLink("Reiseauflistung", "Laden", "Reisen")</li>
                                <li><a href="#">Impressum</a></li>
                                <li><a href="#">AGB</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </footer>
        </div>


    </div>

    @Scripts.Render("~/bundles/jquery")


    <script src="/Scripts/globalize/globalize.js" type="text/javascript"></script>
    <script src="~/Scripts/cldr.js" type="text/javascript"></script>
    <script src="~/Scripts/cldr/event.js" type="text/javascript"></script>
    <script src="~/Scripts/cldr/supplemental.js" type="text/javascript"></script>
    <script src="/scripts/globalize/cultures/globalize.culture.de-DE.js" type="text/javascript"></script>


    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")

    <script>
        $(document).ready(function () {
            $("#myBtn").click(function () {
                $("#myModal").modal();
            });


            Globalize.culture('de');

            // Only there to show which culture are being used.
            console.log(Globalize.culture().name);

        });
    </script>



    @RenderSection("scripts", required: false)
</body>
</html>
