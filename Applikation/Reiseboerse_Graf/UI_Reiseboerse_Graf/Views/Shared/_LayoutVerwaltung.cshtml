<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reisebüro Graf - @ViewBag.Title</title>
    <link rel="shortcut icon" href="~/Content/bilder/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/Content/bilder/favicon.ico" type="image/x-icon">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-xs-3 col-xs-offset-7">
                <img src="~/Content/bilder/reisebüro_logo.jpg" class="img-responsive" />
            </div>
        </div>
    </div>
    <div class="body-content">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    <script src="/Scripts/globalize/globalize.js" type="text/javascript"></script>
    <script src="~/Scripts/cldr.js" type="text/javascript"></script>
    <script src="~/Scripts/cldr/event.js" type="text/javascript"></script>
    <script src="~/Scripts/cldr/supplemental.js" type="text/javascript"></script>
    <script src="/scripts/globalize/cultures/globalize.culture.de-DE.js" type="text/javascript"></script>
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript">
        Globalize.culture('de');

        // Only there to show which culture are being used.
        console.log(Globalize.culture().name);

    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
