@{
    Layout = "~/Views/Shared/_Slider.cshtml";
}



<div class="row">    
        <div class="col-md-12">
            <div id="mycarousel" class="carousel slide" data-ride="carousel">
                <!-- Punkte/Kennzeichen für Bilder -->
                <!--Hier werden weitere Punkte hinzugefügt - pro Bild ein listitem zufügen,
                     damit man zu ihnen manuell springen kann, 10 Bilder -- 10 listitems-->
                <ol class="carousel-indicators">
                    <li data-target="#mycarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#mycarousel" data-slide-to="1"></li>
                    <li data-target="#mycarousel" data-slide-to="2"></li>
                    <li data-target="#mycarousel" data-slide-to="3"></li>
                    <li data-target="#mycarousel" data-slide-to="4"></li>
                    <li data-target="#mycarousel" data-slide-to="5"></li>
                    <li data-target="#mycarousel" data-slide-to="6"></li>
                    <li data-target="#mycarousel" data-slide-to="7"></li>
                    <li data-target="#mycarousel" data-slide-to="8"></li>
                    <li data-target="#mycarousel" data-slide-to="9"></li>
                </ol>

                <!-- Bereich für den Slider -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img src="~/Content/bilder/slidertestimg/1_hotel_test.jpg" data-color="lightblue" alt="Vegas, Baby">
                        <div class="carousel-caption">
                            <h3>Vegas, Baby!</h3>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Content/bilder/slidertestimg/1_reise_test.jpg" data-color="firebrick" alt="Alm">
                        <div class="carousel-caption">
                            <h3>Geh ma zur Alm, hollariiti!</h3>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Content/bilder/slidertestimg/2_hotel_test.jpg" data-color="firebrick" alt="Hotelzimmer">
                        <div class="carousel-caption">
                            <h3>Hotelzimmer, große Auswahl</h3>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Content/bilder/slidertestimg/2_reise_test.jpg" data-color="firebrick" alt="Innenpool">
                        <div class="carousel-caption">
                            <h3>Innenpool, gegebn wie eh und je</h3>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Content/bilder/slidertestimg/3_hotel_test.jpg" data-color="firebrick" alt="Außenpool">
                        <div class="carousel-caption">
                            <h3>Außenpool, sehr schön</h3>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Content/bilder/slidertestimg/3_reise_test.jpg" data-color="firebrick" alt="Samsung">
                        <div class="carousel-caption">
                            <h3>Springbreak von Samsung</h3>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Content/bilder/slidertestimg/4_hotel_test.jpg" data-color="firebrick" alt="Außenpool bei Nacht">
                        <div class="carousel-caption">
                            <h3>Außenpool bei Nacht</h3>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Content/bilder/slidertestimg/4_reise_test.jpg" data-color="firebrick" alt="Dubai">
                        <div class="carousel-caption">
                            <h3>Dubai, Sand, well done...</h3>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Content/bilder/slidertestimg/5_reise_test.jpg" data-color="firebrick" alt="Vegas">
                        <div class="carousel-caption">
                            <h3>Vegas, Pokertische</h3>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Content/bilder/slidertestimg/5_hotel_test.jpg" data-color="firebrick" alt="Rezeption Dubai">
                        <div class="carousel-caption">
                            <h3>Rezeption Hotel Dubai</h3>
                        </div>
                    </div>
                    <!-- Hier kann man noch weitere Bilder für den Slider einfügen! -->
                </div>

                <!-- Controller / Pfeile auf der Seite -->
                <a class="left carousel-control" href="#mycarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#mycarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>

@section scripts{
    <script text="text/javascript">
       @*Klasse-carousel wird eingebunden, die Bilder soll alle 4 Sekunden weiterspringen, er läuft immer durch*@
        $('.carousel').carousel({
            interval: 3400,
            pause: "false"
        });

        var $item = $('.carousel .item');
        var $wHeight = $(window).height();

        $item.height($wHeight);
        $item.addClass('full-screen');

        $('.carousel img').each(function () {
            var $src = $(this).attr('src');
            var $color = $(this).attr('data-color');
            $(this).parent().css({
                'background-image': 'url(' + $src + ')',
                'background-color': $color
            });
            $(this).remove();
        });

        $(window).on('resize', function () {
            $wHeight = $(window).height();
            $item.height($wHeight);
        });
    </script>
}
