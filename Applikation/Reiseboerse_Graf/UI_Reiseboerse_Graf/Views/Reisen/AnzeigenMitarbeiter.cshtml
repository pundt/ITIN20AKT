        <dt>
            @Html.DisplayNameFor(model => model.Hotelkategorie)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Hotelkategorie)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Unterkunft)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Unterkunft)
        </dd>

        <dt>
