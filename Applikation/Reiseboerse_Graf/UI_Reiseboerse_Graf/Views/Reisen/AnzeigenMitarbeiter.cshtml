        <dt>
            @Html.DisplayNameFor(model => model.Preis_Kind)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Preis_Kind)
        </dd>

    </dl>
    <table class="table table-striped">
        <tr>
            <th>@Html.DisplayNameFor(x=>x.Reisedaten[0].DatumsAnzeige)</th>
            <th>@Html.DisplayNameFor(x => x.Reisedaten[0].Anmeldefrist)</th>
            <th>@Html.DisplayNameFor(x => x.Reisedaten[0].Restplätze)</th>
        </tr>
        @foreach (var datum in Model.Reisedaten)
        {
            <tr>
                <td>@datum.DatumsAnzeige</td>
                <td>@datum.Anmeldefrist.ToShortDateString()</td>
                <td>@datum.Restplätze</td>
            </tr>
        }

    </table>
