@model UI_Reiseboerse_Graf.Models.ReisedurchfuehrenModel

@{
    ViewBag.Title = "ReiseAnzahlErstellen";
    Layout = "~/Views/Shared/_LayoutVerwaltung.cshtml";
}

<h2>Reisedatum eingeben</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal reise">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Reise_id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Reise_id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Reise_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.StartDatum, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class='input-group date col-md-2' id='date1'>
                        @Html.TextBoxFor(model => model.StartDatum, "{0:dd.MM.yyyy}", new { @class = "form-control" })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
        </div>


        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.EndDatum, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class='input-group date col-md-2' id='date2'>
                        @Html.TextBoxFor(model => model.EndDatum, "{0:dd.MM.yyyy}", new { @class = "form-control" })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
        </div>



        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.Anmeldefrist, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class='input-group date col-md-2' id='date3'>
                        @Html.TextBoxFor(model => model.Anmeldefrist, "{0:dd.MM.yyyy}", new { @class = "form-control" })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.ReiseAnzahl, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ReiseAnzahl, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ReiseAnzahl, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.WeitereReisenHinzufuegen, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div>
                    @Html.CheckBoxFor(x => x.WeitereReisenHinzufuegen)
                    @*@Html.EditorFor(model => model.WeitereReisenHinzufuegen)
                        @Html.ValidationMessageFor(model => model.WeitereReisenHinzufuegen, "", new { @class = "text-danger" })*@
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Startseite", "Verwaltung", "Home", null, new { @class = "btn btn-info" })
</div>

@section Scripts {
    @*@Scripts.Render("~/bundles/jqueryval")*@
    <script type="text/javascript">

        $(function () {
            $('#date1').datepicker({
                language: 'de',
                autoclose:true
            });
            $('#date2').datepicker({
                language: 'de',
                autoclose: true
            });
            $('#date3').datepicker({
                language: 'de',
                autoclose: true
            });

            $('#date1').on('changeDate', function (ev) {
                $('#date2').datepicker("setStartDate", $('#date1').datepicker("getDate"));
                $('#date3').datepicker("setEndDate", $('#date1').datepicker("getDate"));
            });
        })
    </script>
}
