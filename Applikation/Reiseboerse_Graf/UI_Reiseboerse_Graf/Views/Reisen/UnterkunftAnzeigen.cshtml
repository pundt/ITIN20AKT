@model UI_Reiseboerse_Graf.Models.UnterkunftdetailModel





<div class="container-fluid">
    <div class="row reise1">

        <div class="col-xs-8">
            <h4 class="Schriftartblau"><img src="~/Content/bilder/FontAwesome_Version01_32.png"/> Ihre Unterkunft: @Html.DisplayFor(model => model.Bezeichnung)</h4>
            <ul class="list-unstyled">
                <li></li>
                <li>
                    @Html.DisplayFor(model => model.Verpflegung.Bezeichnung)
                    <!--Sterne je nach Anzahl einfügen-->
                    @Model.Kategorie <text>Sterne</text>

                </li>


            </ul>

            @Html.DisplayFor(model => model.Beschreibung)




        </div>

        <div class="col-xs-4 hoteldetailbild">
            <!--Bilder vom entsprechenden Hotel einfügen z.Zt. nur Testbilder-->
            <img src="~/Content/bilder/slidertestimg/1_hotel_test.jpg" class="img-responsive img-rounded" />
        </div>
    </div>
</div>
