@model UI_Reiseboerse_Graf.Models.UnterkunftdetailModel




<div class="container-fluid">
    <div class="row reise">
        <div class="col-xs-3">
            <ul class="list-unstyled center-block">
                <li><img src="~/Content/bilder/FontAwesome_Version01_32.png" class="center-block" /></li>
                <li>@Html.DisplayFor(model => model.Verpflegung.Bezeichnung)</li>
            </ul>
            @for (int i = 0; i < Model.Kategorie; i++)
            {
                <!--Sterne je nach Anzahl einfügen-->
                @i <text>Sterne</text>
            }
        </div>
        <div class="col-xs-5">
            <h4 class="Schriftartblau">Ihre Unterkunft: @Html.DisplayFor(model => model.Bezeichnung)</h4> <hr />

            @Html.DisplayFor(model => model.Beschreibung)
            <br />


        </div>
        <div class="col-xs-4">
            <!--Bilder vom entsprechenden Hotel einfügen z.Zt. nur Testbilder-->
            <img src="~/Content/bilder/slidertestimg/1_hotel_test.jpg" class="img-responsive img-rounded center-block" />
        </div>
    </div>
</div>
