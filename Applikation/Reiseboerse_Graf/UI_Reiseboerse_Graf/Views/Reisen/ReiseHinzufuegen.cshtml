@model UI_Reiseboerse_Graf.Models.ReiseAnlegenModel

@{
    ViewBag.Title = "ReiseHinzufuegen";
    Layout = "~/Views/Shared/_LayoutVerwaltung.cshtml";
}

<h2>ReiseHinzufuegen</h2>


@using (Html.BeginForm("ReiseHinzufuegen", "Reisen", "", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="form-horizontal reise">       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="container">
            <div class="row">
                <div class="row col-xs-6">

                    <div class="form-group">
                        @Html.LabelFor(model => model.Titel, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Titel, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Titel, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.Beschreibung, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Beschreibung, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Beschreibung, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.Label("Land", htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.DropDownListFor(model => model.Land_id, new SelectList(Model.Reiseland, "land_ID", "landName"))
                            <input type="button" id="a" value="Neues Land hinzufuegen" />
                        </div>
                        <div>
                            <div class="col-md-9 NichtZeigen" id="Land">
                                @Html.EditorFor(model => model.NeuesLand, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NeuesLand, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.Label("Ort", htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.DropDownListFor(model => model.Ort_id, new SelectList(Model.ReiseOrt, "Id", "Bezeichnung"))
                            <input type="button" id="b" value="Neuen Ort hinzufuegen" />
                        </div>
                        <div>
                            <div class="col-md-9 NichtZeigen" id="Ort">
                                @Html.EditorFor(model => model.NeuerOrt, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NeuerOrt, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.Label("Preis Erw", htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.PreisErw, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PreisErw, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Preis Kind", htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.PreisKind, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PreisKind, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row col-xs-6">
                    <div class="form-group">
                        @Html.Label("Verpflegung", htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.DropDownListFor(model => model.Verpflegung_id, new SelectList(Model.Verpflegung, "Id", "Bezeichnung"))
                        </div>
                    </div>



                    <div class="form-group">
                        @Html.Label("Unterkunft", htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.DropDownListFor(model => model.Unterkunft_id, new SelectList(Model.Unterkunft, "ID", "Bezeichnung"))
                            <input type="button" id="c" value="Unterkunft hinzufuegen" />
                        </div>

                    </div>

                    <div class="row">
                        <div class="form-group col-md-10 col-md-push-3 NichtZeigen" id="NeueUnterkunft">
                            <div class="row">
                                <div>@Html.Label("Beschreibung", htmlAttributes: new { @class = "control-label col-md-3" })</div>
                                <div class="col-md-9">@Html.EditorFor(model => model.NeueUnterkunft.Beschreibung, new { htmlAttributes = new { @class = "form-control" } })</div>
                            </div>
                            <div class="row">
                                <div>@Html.Label("Bezeichnung", htmlAttributes: new { @class = "control-label col-md-3" })</div>
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.NeueUnterkunft.Bezeichnung, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="row">
                                <div>
                                    @Html.LabelFor(model => model.NeueUnterkunft.Kategorie, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        <div class="acidjs-rating-stars">
                                            <form>
                                                <input type="radio" name="NeueUnterkunft.Kategorie" id="group-2-0" value="5" />
                                                <label for="group-2-0"></label>
                                                <input type="radio" name="NeueUnterkunft.Kategorie" id="group-2-1" value="4" />
                                                <label for="group-2-1"></label>
                                                <input type="radio" name="NeueUnterkunft.Kategorie" id="group-2-2" value="=3" />
                                                <label for="group-2-2"></label>
                                                <input type="radio" name="NeueUnterkunft.Kategorie" id="group-2-3" value="2" />
                                                <label for="group-2-3"></label>
                                                <input type="radio" name="NeueUnterkunft.Kategorie" id="group-2-4" value="1" />
                                                <label for="group-2-4"></label>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    

                    <div class="row">
                        <div>
                            @Html.Label("Reisebild", htmlAttributes: new { @class = "control-label col-md-3" })
                        </div>
                        <div class="col-md-9">
                            <div>
                                <input type="file" id="file1" name="file1" />
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div>
                            @Html.Label("Unterkunftbild", htmlAttributes: new { @class = "control-label col-md-3" })
                        </div>
                        <div class="col-md-9">
                            <div>
                                <input type="file" id="file6" name="file2" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">


        $(document).ready(function () {
            $("#b").click(function () {
                $("#Ort").removeClass("NichtZeigen");
            });
        });

        $(document).ready(function () {
            $("#a").click(function () {
                $("#Land").removeClass("NichtZeigen");
            });
        });

        $(document).ready(function () {
            $("#c").click(function () {
                $("#NeueUnterkunft").removeClass("NichtZeigen");
            });
        });

    </script>
}
