                <div class="row col-xs-6">
                    <div class="row form-group">
                        @Html.Label("Unterkunft", htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="row col-md-9">
                            <div>
                                @Html.DropDownListFor(model => model.Unterkunft_id, new SelectList(Model.Unterkunft, "ID", "Bezeichnung"))
                            </div>
                            <div>
                                <input type="button" id="c" value="Neue Unterkunft hinzufuegen" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 NichtZeigen" id="NeueUnterkunft">
                        <div class="row">
                            <table>
                                <tr>
                                    <td>@Html.Label("Beschreibung", htmlAttributes: new { @class = "control-label col-md-3" })</td>
                                    <td>@Html.EditorFor(model => model.NeueUnterkunft.Beschreibung, new { htmlAttributes = new { @class = "form-control" } })</td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.Label("Bezeichnung", htmlAttributes: new { @class = "control-label col-md-3" })
                                    </td>
                                    <td>
                                        @Html.EditorFor(model => model.NeueUnterkunft.Bezeichnung, new { htmlAttributes = new { @class = "form-control" } })
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.LabelFor(model => model.NeueUnterkunft.Kategorie, htmlAttributes: new { @class = "control-label col-md-2" })
                                    </td>
                                    <td>
                                        <div class="acidjs-rating-stars">
                                            <form>
                                                <input type="radio" name="NeueUnterkunft.Kategorie" id="group-2-0" value="@Model.NeueUnterkunft.Kategorie=5" />
                                                <label for="group-2-0"></label>
                                                <input type="radio" name="NeueUnterkunft.Kategorie" id="group-2-1" value="@Model.NeueUnterkunft.Kategorie=4" />
                                                <label for="group-2-1"></label>
                                                <input type="radio" name="NeueUnterkunft.Kategorie" id="group-2-2" value="@Model.NeueUnterkunft.Kategorie=3" />
                                                <label for="group-2-2"></label>
                                                <input type="radio" name="NeueUnterkunft.Kategorie" id="group-2-3" value="@Model.NeueUnterkunft.Kategorie=2" />
