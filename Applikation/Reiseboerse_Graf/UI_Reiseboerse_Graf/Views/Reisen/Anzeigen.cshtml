@model UI_Reiseboerse_Graf.Models.ReiseAnzeigenModel

@{
    ViewBag.Title = "Anzeigen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <div class="row reise1">
        <div class="col-xs-4 reisedetailbild">
            <img src="~/Content/bilder/slidertestimg/2_reise_test.jpg" class="img-responsive img-rounded" />
        </div>
        <div class="col-xs-4">
            <h4 class="Schriftartblau">@Html.DisplayFor(model => model.Reisedetail.Titel), @Html.DisplayFor(model => model.Reisedetail.Ort)</h4>
            @Html.DisplayFor(model => model.Reisedetail.Beschreibung)
            <br />

        </div>
        <div class="col-xs-4">
            <div class="termin">Buchen Sie bis: @Html.DisplayFor(model=>model.Reisedatum.Anmeldefrist)</div>
            @using (Html.BeginForm("Buchen", "Buchungen", FormMethod.Post, new { @class = "zentriert" }))
            {
                @Html.HiddenFor(x => x.Reisedetail.Preis_Erwachsene)
                @Html.HiddenFor(x => x.Reisedetail.Preis_Kind)
                @Html.HiddenFor(x=>x.Reisedetail.Titel)
                @Html.HiddenFor(x=>x.Reisedatum.ID)
                <table class="table table-condensed">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Reisedetail.Preis_Erwachsene) <br />ab 14 Jahre
                        </th>
                        <td>
                            € @Html.DisplayFor(model => model.Reisedetail.Preis_Erwachsene)
                        </td>
                        <td>
                            <input type="number" min="0" max="@Model.Reisedatum.Restplätze" value="0" name="Anzahl_Erwachsene" />
                        </td>
                    </tr>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Reisedetail.Preis_Kind)<br />bis 13 Jahre
                        </th>
                        <td>
                            € @Html.DisplayFor(model => model.Reisedetail.Preis_Kind)
                        </td>
                        <td>
                            <!--Es müsste hier noch die max-Zahl auf Restplätze minus die Anzahl der Plätze Erwachsene-->
                            <input type="number" min="0" max="@Model.Reisedatum.Restplätze" value="0"   name="Anzahl_Kinder"/>
                        </td>
                    </tr>
                    <tr>
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <td colspan="3" align="center">
                                <div class="btn ausgegraut mytooltip">Buchen<span class="tooltiptext">Bitte erst anmelden</span>
                                </div>
                            </td>
                        }
                        else
                        {
                            <td colspan="3" align="center"><input type="submit" value="Buchen" class="btn buttonind" /></td>
                        }


                    </tr>
                </table>
            }
        </div>
    </div>
    <br />
    <div class="row">
        @Html.Action("UnterkunftAnzeigen", new { id = Model.Reisedetail.Unterkunft_ID })
    </div>
</div>
